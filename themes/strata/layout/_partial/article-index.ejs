<%
    var cssClass = ((index + 1) %2)? '6u' : '6u$';
%>
<article class="<%- cssClass -%> 12u$(xsmall) work-item">
  <a href="<%- item.cover_detail || theme.default_cover_detail %>" aria-label="<%- item.title -%>"><img src="<%- item.cover_index || theme.default_cover_index %>" title="<%- item.title -%>" alt="<%- item.title -%>"  /></a>
    <a href="<%- config.root %><%- item.path %>" aria-label="<%- item.title -%>"><h3><%- item.title || theme.default_post_title || "Untitled" %></h3></a>
  <p><%- item.subtitle || "" %></p>
</article>
